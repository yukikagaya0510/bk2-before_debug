<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th>フォロー数</th>
		<th><%= link_to user.followings.count, follows_user_path(user) %></th>
	</tr>
	<tr>
		<th>フォロワー数</th>
		<th><%= link_to user.followers.count, followers_user_path(user) %></th>
	</tr>
</table>

<div class="row">
	<% if current_user != user %>
	<% if current_user.followed_by?(user) %>
		<%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-success" %>
	<% else %>
		<%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-primary" %>
	<% end %>
	<% end %>
</div>

<div class="row">
	<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>