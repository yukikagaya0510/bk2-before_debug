<% if @book.errors.any? %>
           <div id="error_explanation" class="alert alert-danger">
            <span><%= pluralize(@book.errors.count, "error") %>prohibited this obj from being saved:</span>
               <ul>
                   <% @book.errors.full_messages.each do |message| %>
                   <li><%= message %></li>
                   <% end %>
               </ul>
           </div>
           <% end %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">

